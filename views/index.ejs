<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <h1>Shopping List</h1>
    <nav>
        
            <form action="/list" method="POST">
                Add Shopping Item: <input type="text" name="item" /><br/>
                Category: <input type="text" name="category" /><br/>
                <input type="submit" name="" value="Add Item"/>
                <input type="hidden" name="userId" value="<%= userId%>" />
            </form>
    
        <ul>
            <% list.forEach((list) => { %>
                <li>
                    <!--Determines which route to go -->
                    <a href="/list/<%= list.id %>">
                        <%= list.item %> - <%= list.category %>
                    </a>
                    <!--  ADD DELETE FORM HERE-->
                    <form action="/list/<%= list.id %>/<%= list.userId %>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE" />
                    </form>
                </li>
            <% }) %>
        </ul>
        <br /><br />
        <a href="/users">Home Page</a>
    </nav> 
</body>
</html>